{% import '_includes/forms' as forms %}


<form method="post" style="display: flex">
    {{ actionInput('emaillist/emaillist/create') }}
    {{ csrfInput() }}

    {{ forms.textField({
        type: 'email',
        name: 'email',
        first: true,
        placeholder: 'Email'
    }) }}

    <div style="margin-left: 8px;">
        {{ forms.submitButton({
            label: 'Create email'
        }) }}
    </div>

</form>

{# @var email \wsydney76\emaillist\records\EmaillistRecord #}

<form method="post" onsubmit="return confirm('Delete selected?')">
    {{ actionInput('emaillist/emaillist/delete') }}
    {{ csrfInput() }}


    <table class="table data">
        {% for email in emails %}
            <tr>
                <td>
                    {{ forms.checkbox({
                        name: "delete[]",
                        value: email.id,
                        label: email.email
                    }) }}

                </td>
                <td>
                    {{ email.dateCreated|datetime('Y-m-t H:i') }}
                </td>
            </tr>
        {% endfor %}
    </table>

    <p>
        {{ forms.submitButton({
            label: 'Delete selected'
        }) }}
    </p>

</form>